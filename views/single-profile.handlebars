<link rel="stylesheet" href="./styles.css">


<div id="profile-card" class="card" style="width: 18rem;">
  <img src= {{ profile.profile_image }} class="card-img-top" alt="profile picture">
  <div class="card-body">
    <h5 class="card-title">{{name}}</h5>
    <p class="card-text">My preferences</p>
  </div>
  <ul class="list-group list-group-flush">
    <li id="username"class="list-group-item">{{username}}</li>
    <li id="location" class="list-group-item">{{location}}</li>
    <li id="phone" class="list-group-item">{{phone}}</li>
    <li id="experience" class="list-group-item">{{experience}}</li>
   <li id="gear" class="list-group-item">{{gear}}</li>
  </ul>

</div>


<script src="/public/javascript/profile-page.js"></script>
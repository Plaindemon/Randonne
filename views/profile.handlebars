<div id="profile-box" class="profile-card card border-secondary mb-3">
  <h2 id="welcome"> Welcome Climbers! </h2>
<div class="card" style="width: 18rem;">
  <img src= {{ profile.profile_image}} class="card-img-top" style=" padding: 5px; width: 300px" alt="profile picture">
  <div class="card-body">
    <h5 class="card-title">{{ user.username }}</h5>
    <p class="card-text">My preferences</p>
  </div>
  <ul class="list-group list-group-flush">
    <li id="username"class="list-group-item">Username: {{ user.username }}</li>
    <li id="email"class="list-group-item">User email: {{ user.email }}</li>
    <li id="location" class="list-group-item">User Location: {{profile.user_location}}</li>
    <li id="phone" class="list-group-item">Phone number: {{profile.user_phone}}</li>
    <li id="experience" class="list-group-item">Has experience climbing: {{profile.user_experience}}</li>
   <li id="gear" class="list-group-item">Has Gear: {{profile.has_gear}}</li>
  </ul>
 </div>
</div>


<script src="/javascript/profile.js"></script>
